<h1> Checkout page </h1>
<div class="white_price">
<br />
<% @carted_products.each do |carted_product| %>
	<%= carted_product.product.name %>
	<%= carted_product.quantity %>

	<%= link_to "Remove From Cart", "/carted_products/#{carted_product.id}", method: :delete %><br>
<% end %>

<%= form_tag "/orders", method: :post do %>
	<div class="check">
	<input type="submit" value="Buy Now" class="btn btn-default">
	</div>
<% end %>
</div>

