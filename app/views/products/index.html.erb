
<h1>Viewing all products</h1>
<br>
<% @products.each_slice(3) do |three| %>
  <div class="row">
    <% three.each do |x| %>
         <div class="col-md-4">
          <div class="well">
            <div class="item">
             <a href="/products/<%= x.id %>"><%= x.name %></a><br>
             <img src="assets/<%= x.image %>">
              <div class="price">
              $<%= x.price%>
            </div>
            <div>
             <%= x.description %><br>
              </div>
            <%= link_to "Delete", "/products/#{x.id}", method: :delete %>
            <%= link_to "Edit", "/products/#{x.id}/edit"%>
            </div>
          </div>
        </div>
    <%end%>
  </div>
<% end %>

<div class="container">
<%= button_to "Add New Product", "/products/new", method: :get %>
</div>





