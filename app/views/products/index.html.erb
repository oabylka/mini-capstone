<div class="search">
<%= form_tag products_search_results_path do %>
  Search: <%= text_field_tag :keywords %>
  <%= submit_tag 'Search' %>
<% end %>
</div>

<h1>Viewing all products</h1>
<br>
<div class="box">
  <% @products.each do |x| %>
      <div class="col-md-3">
          <div class="item">
           <a href="/products/<%= x.id %>"><%= x.name %></a><br>
           <img src="assets/<%= x.image %>">
           <%= x.description %><br>
          <%= link_to "Delete", "/products/#{x.id}", method: :delete %>
          <%= link_to "Edit", "/products/#{x.id}/edit"%>
          </div>
      </div>
  <%end%>
</div>


<form action="/products/new" text-align: center;>
    <input type="submit" value="Add New Product"/>
</form>




